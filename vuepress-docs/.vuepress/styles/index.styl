@media (min-width: 419px) {
  .theme-container .home .hero {
    img {
      max-height: 120px;
      margin: 30px 0 0 310px;
    }
    #main-title {
      text-align: left;
      text-indent: 450px;
      margin-top: -90px;
      margin-bottom: 2.5rem;
    }
  }
}

@media (max-width: 419px) {
  .home .hero p.description {
    font-size: 16px;
  }
  .theme-default-content div[class*="language-"] {
    font-size: 13px;
    padding-left: 0.8rem;
    padding-right: 0.8rem;
  }
}

@media (max-width: 719px) {
  .home .features .feature {
    padding: 0 1.6rem;
  }
}

.theme-container .home td {
  vertical-align: top;
}